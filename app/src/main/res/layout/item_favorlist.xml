<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:gravity="center"
        android:background="@drawable/arrival_btn"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvStationName"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/imagev1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/stationName"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imagev2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imagev1"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imagev3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imagev2"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>